# vim:ft=i3config

set $floating_term_cmd kitty --class kittyFloat

for_window [class="kittyFloat"] floating enable 
for_window [class="kittyFloat"] resize set 800 600
for_window [class="kittyFloat"] move position center

bindsym $mod+Shift+b exec $floating_term_cmd bluetoothctl
# bindsym $mod+Shift+m exec $floating_term_cmd #script que se encarge de los monitores
# bindsym $mod+Shift+a exec $floating_term_cmd #script que se encarge de los audios
# bindsym $mod+Shift+d exec $floating_term_cmd #script que se encarge de los discos
# bindsym $mod+Shift+w exec $floating_term_cmd #script que se encarge de las redes
bindsym $mod+$alt+Return exec $floating_term_cmd
